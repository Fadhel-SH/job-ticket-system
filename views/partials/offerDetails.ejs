<div class="card">
<h1><%= offer.title %></h1>
<p><%= offer.description %></p>
<p>Price: <%= offer.price %></p>
<p>Best Offer: <%= offer.bestOffer %></p>
<p>Created by: <%= offer.createdBy.username %></p>

<% if (user && user.role === 'user') { %>
  <form action="/offers/<%= offer._id %>/requests" method="POST">
    <button type="submit">Request to Take</button>
  </form>
<% } %>

<ul>
  <% offer.requestedBy.forEach(requester => { %>
    <li><%= requester.username %></li>
  <% }) %>
</ul>
<a href="/offers">Back to Offers</a>
</div>